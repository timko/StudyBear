%h1 Problems for #{@topic.name}

%table
  %tbody
    - @problems.each do |problem|
      %tr
        %td= problem.statement
        %td 
          = form_tag(:controller => "problems", :action => "evaluate")do
            =label :potential, :ans, "Answer"
            =text_field :potential, 'ans'
          = submit_tag "Submit"

=link_to 'Create New Problem', new_problem_path(:id => @topic.id)

.row
= link_to 'Go Back', course_topics_path(:id => @topic.course.id)
